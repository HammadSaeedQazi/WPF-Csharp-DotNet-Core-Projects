<Window x:Class="Online_Grocery_System.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Online_Grocery_System"
        xmlns:myviews="clr-namespace:Online_Grocery_System.Views"
    mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="875">
    
    <!--This content control will decide for the view to be display on the screen-->
    <Grid>
        <ContentControl Content="{Binding SelectedViewModel}" Name="currentView"></ContentControl>
    </Grid>
</Window>
